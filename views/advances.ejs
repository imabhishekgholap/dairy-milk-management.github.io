<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Advances</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Advances</h1>
    <form action="/advances/add" method="POST">
        <select name="farmer" required>
            <% farmers.forEach(farmer => { %>
                <option value="<%= farmer._id %>"><%= farmer.name %></option>
            <% }); %>
        </select>
        <input type="number" name="amount" placeholder="Amount (₹)" required>
        <button type="submit">Add Advance</button>
    </form>
    <ul>
        <% advances.forEach(advance => { %>
            <li>
                <% if (advance.farmer) { %>
                    <%= advance.farmer.name %>: ₹<%= advance.amount %>, <%= advance.date.toDateString() %>
                <% } else { %>
                    Unknown Farmer: ₹<%= advance.amount %>, <%= advance.date.toDateString() %>
                <% } %>
                <form action="/advances/delete/<%= advance._id %>" method="POST" class="inline-form">
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
